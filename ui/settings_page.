import tkinter as tk
from tkinter import Frame, Label, Button, Scale, HORIZONTAL

BG = "#0d0d0d"
CARD = "#1c1c1c"
TXT = "#eaeaea"
ACCENT = "#2B6DFF"
WARN = "#ff5555"


class SettingsPage(Frame):
    def __init__(self, parent, controller):
        super().__init__(parent, bg=BG)
        self.controller = controller
        self.state = controller.state

        # ================= HEADER =================
        header = Frame(self, bg=BG)
        header.pack(fill="x", pady=10)

        Button(
            header,
            text="← Back",
            command=lambda: controller.show_frame("MainPage"),
            font=("SF Pro Display", 12),
            bg="#1b1b1b",
            fg=TXT,
            bd=0,
            padx=10,
            pady=5,
        ).pack(side="left", padx=10)

        Label(
            header,
            text="SETTINGS",
            font=("SF Pro Display", 22, "bold"),
            bg=BG,
            fg=TXT,
        ).pack(side="left", padx=10)

        # ================= BODY =================
        body = Frame(self, bg=BG)
        body.pack(pady=20, fill="both", expand=True)

        # ---------- DISPLAY ----------
        self._section(body, "DISPLAY")

        Label(
            body,
            text="Screen Brightness",
            fg=TXT,
            bg=BG
        ).pack(anchor="w", padx=20)

        self.brightness = Scale(
            body,
            from_=10,
            to=255,
            orient=HORIZONTAL,
            length=320,
            bg=BG,
            fg=TXT,
            troughcolor="#444444",
            highlightthickness=0,
            command=self._set_brightness,
        )
        self.brightness.pack(padx=20, pady=10)

        # ---------- THEME ----------
        self._section(body, "THEME")

        row = Frame(body, bg=BG)
        row.pack(padx=20, pady=5, anchor="w")

        Button(
            row,
            text="Dark",
            bg=CARD,
            fg=TXT,
            width=12,
            command=lambda: self._set_theme("dark")
        ).pack(side="left", padx=6)

        Button(
            row,
            text="Light",
            bg=CARD,
            fg=TXT,
            width=12,
            command=lambda: self._set_theme("light")
        ).pack(side="left", padx=6)

        # ---------- SYSTEM (SAFE) ----------
        self._section(body, "SYSTEM (SAFE)")

        self.lbl_confirm = Label(body, text="", fg=WARN, bg=BG)
        self.lbl_confirm.pack(padx=20, pady=(0, 6), anchor="w")

        self.btn_restart = Button(
            body,
            text="RESTART APP",
            bg="#333333",
            fg=TXT,
            width=22,
            pady=8,
            command=self._request_restart,
        )
        self.btn_restart.pack(padx=20, pady=6, anchor="w")

        self.btn_reboot = Button(
            body,
            text="REBOOT SYSTEM",
            bg="#332222",
            fg=WARN,
            width=22,
            pady=8,
            command=self._request_reboot,
        )
        self.btn_reboot.pack(padx=20, pady=6, anchor="w")

    # ================= HELPERS =================

    # ---------- SECTION HEADER ----------
    def _section(self, parent, title):
        Label(
            parent,
            text=title,
            fg=ACCENT,
            bg=BG,
            font=("SF Pro Display", 14, "bold")
        ).pack(anchor="w", padx=20, pady=(20, 5))

    # ================= ACTIONS =================

    def _set_brightness(self, value):
        # เก็บค่าไว้ใน state (logic จะไปจัดการเขียนจริงเอง)
        try:
            self.state.screen_brightness = int(value)
        except Exception:
            pass

    def _set_theme(self, name):
        self.state.theme = name

    def _request_restart(self):
        # แค่ตั้ง flag ไม่สั่ง OS ตรง
        self.state.request = "restart_app"
        self.lbl_confirm.config(text="Press again to CONFIRM RESTART")

    def _request_reboot(self):
        # แค่ตั้ง flag ไม่สั่ง OS ตรง
        self.state.request = "reboot"
        self.lbl_confirm.config(text="Press again to CONFIRM REBOOT")

    # ================= UPDATE =================

    def update_data(self, st):
        # sync brightness
        if hasattr(st, "screen_brightness"):
            try:
                self.brightness.set(st.screen_brightness)
            except Exception:
                pass

        # reset confirm text when no pending request
        if getattr(st, "request", None) is None:
            self.lbl_confirm.config(text="")

    def on_show(self):
        if not self.state.settings_unlocked:
            self._show_pin_lock()

         # ---------- PIN LOCK ----------
    def _show_pin_lock(self):
        self.pin_overlay = Frame(self, bg="#000000")
        self.pin_overlay.place(relx=0, rely=0, relwidth=1, relheight=1)

        card = Frame(self.pin_overlay, bg=CARD, padx=20, pady=20)
        card.place(relx=0.5, rely=0.5, anchor="center")

        Label(
            card,
            text="ENTER PIN",
            font=("SF Pro Display", 18, "bold"),
            bg=CARD,
            fg=TXT,
        ).pack(pady=(0, 10))

        self.pin_entry = tk.Entry(
            card,
            font=("SF Pro Display", 20),
            justify="center",
            show="*",
            width=6,
        )
        self.pin_entry.pack(pady=10)
        self.pin_entry.focus()

        Button(
            card,
            text="UNLOCK",
            font=("SF Pro Display", 14, "bold"),
            bg=ACCENT,
            fg="#ffffff",
            bd=0,
            padx=20,
            pady=8,
            command=self._check_pin,
        ).pack(pady=(10, 0))

    def _check_pin(self):
        entered = self.pin_entry.get()
        if entered == self.state.settings_pin:
            self.state.settings_unlocked = True
            self.pin_overlay.destroy()
        else:
            self.pin_entry.delete(0, tk.END)
 
